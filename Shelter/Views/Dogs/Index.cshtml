@{
  Layout = "_Layout";
}

@using Shelter.Models;
@model List<Shelter.Models.Dog>;
<div class="container">
<br>
<br>
<div class="column">
  <div class=row>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
      <div class="card-header">
        <h1>Come meet all of our beautiful dogs!</h1>
          @if (@Model.Count == 0)
          {
            <h4>You call this a rescue? Are there any animals in here??</h4>
          }
      </div>
      <div class="card-body">
        @foreach (Dog dog in Model)
        {
          <li><h2>@Html.ActionLink($"{dog.Name}", "details", new { id = dog.DogId })</h2></li>
        }
      </div>
    </div>
    <br>
    <br>
      <div class="col-md-3">
      <br>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Add a new rescue", "Create")</button>
      <br>
      <br>
      <hr>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button>
      </div>
  </div>
</div>